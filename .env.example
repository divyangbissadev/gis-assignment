# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
ENVIRONMENT=production
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/arcgis_client.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Network Configuration
ARCGIS_CONNECT_TIMEOUT=10
ARCGIS_READ_TIMEOUT=30
ARCGIS_MAX_RETRIES=3
ARCGIS_RETRY_BACKOFF=0.5
ARCGIS_MAX_CONNECTIONS=10
ARCGIS_MAX_KEEPALIVE=5
ARCGIS_KEEPALIVE_EXPIRY=30

# Rate Limiting
ARCGIS_RATE_LIMIT_CALLS=100
ARCGIS_RATE_LIMIT_PERIOD=60

# Cache Configuration
ARCGIS_CACHE_ENABLED=true
ARCGIS_CACHE_TTL=300
ARCGIS_CACHE_MAX_SIZE=1000
ARCGIS_CACHE_DIR=.cache

# Query Configuration
ARCGIS_DEFAULT_PAGE_SIZE=1000
ARCGIS_MAX_PAGE_SIZE=2000
ARCGIS_DEFAULT_OUT_FIELDS=*
ARCGIS_ENABLE_PAGINATION=true
ARCGIS_SPATIAL_REF_WKID=4326

# Compliance Configuration
COMPLIANCE_MIN_AREA=1000.0
COMPLIANCE_STRICT=true

# Session Management
SESSION_DIR=sessions
SESSION_AUTO_BACKUP=true
SESSION_BACKUP_COUNT=3
SESSION_COMPRESS=true

# ArcGIS Service URLs (if needed)
# ARCGIS_SERVICE_URL=https://services.arcgis.com/your-service-url

